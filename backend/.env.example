# Gemini API Key (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Server Port (Optional, defaults to 5000)
PORT=5000

# Flask Debug Mode (Set to False in production)
FLASK_DEBUG=False

# PostgreSQL Database URL (Neon DB)
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=your_neon_database_url_here

# OpenRouter (AI Fallback - Multi-Model Support)
OPENROUTER_API_KEY=your_openrouter_key_here
# Comma-separated list of models to try in order (Fallback Chain)
OPENROUTER_MODEL=allenai/olmo-3.1-32b-think:free,openai/gpt-oss-120b:free,mistralai/mistral-7b-instruct:free
